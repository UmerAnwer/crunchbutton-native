<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="org.apache.cordova.balanced"
    version="0.1.0">

    <name>BalancedPlugin</name>
    <description>Cordova Balanced Plugin</description>
    <license>Apache 2.0</license>
    <keywords>cordova,balanced</keywords>

    <repo></repo>
    <issue></issue>

    <js-module src="www/balanced.js" name="balanced">
        <merges target="navigator.balanced" />
    </js-module>


    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="BalancedPlugin">
                <param name="android-package" value="org.apache.cordova.balanced.BalancedPlugin"/>
            </feature>
        </config-file>

        <source-file src="src/android/BalancedPlugin.java" target-dir="src/org/apache/cordova/balanced" />

    </platform>

</plugin>
